<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.whereru.SignActivity"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login"
        android:scrollbarSize="2dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:hint="Enter Fname "
            android:textColorHint="#000000"
            android:textSize="21sp"
            android:shadowColor="#000000"
            android:id="@+id/edtfname"
            android:inputType="text"/>

        <EditText
            android:id="@+id/edtlname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter Lname "
            android:shadowColor="#000000"
            android:textColorHint="#000000"
            android:textSize="21sp"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter Ph_No.  "
            android:textColorHint="#000000"
            android:textSize="21sp"
            android:shadowColor="#000000"
            android:id="@+id/edtpno"
            android:inputType="number" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter E-mail Id  "
            android:textColorHint="#000000"
            android:textSize="21sp"
            android:shadowColor="#000000"
            android:id="@+id/edtmail"
            android:inputType="textEmailAddress" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter Password "
            android:textColorHint="#000000"
            android:textSize="21sp"
            android:shadowColor="#000000"
            android:id="@+id/edtpword"
            android:inputType="textPassword"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Re-Enter Password "
            android:textColorHint="#000000"
            android:textSize="21sp"
            android:shadowColor="#000000"
            android:id="@+id/edtcpword"
            android:inputType="textPassword"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:text=" Submit"
            android:textColor="#000000"
            android:textSize="20sp"
            android:shadowColor="#000000"
            android:id="@+id/btnsign"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
